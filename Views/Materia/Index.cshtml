@model IEnumerable<Inscripcion_Universidad.Models.Dominio.Materia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Carrera.NombreCarrera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombreMateria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Carrera.NombreCarrera)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NombreMateria)
