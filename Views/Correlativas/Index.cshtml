@model IEnumerable<Inscripcion_Universidad.Models.Dominio.Correlativa>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listas De Materias Correlativas</h2>

<p>
    <a href="@Url.Action("Create", "Correlativas")" class="btn btn-primary">Crear Correlativa</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCorrelativa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCorrelativa)
        </td>
        <td>
            <a href="@Url.Action("Edit", "Correlativas", new { id=item.Id })" class="btn btn-primary">Editar</a>
            <a href="@Url.Action("Details", "Correlativas", new { id=item.Id })" class="btn btn-primary">Detalles</a>
            <a href="@Url.Action("Delete", "Correlativas", new { id=item.Id })" class="btn btn-danger">Eliminar</a>
</tr>
}

</table>
