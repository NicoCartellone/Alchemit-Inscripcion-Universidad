@model IEnumerable<Inscripcion_Universidad.Models.Dominio.Carrera>

@{
    ViewBag.Title = "Administrador de carreras";
}

<h2>Administrador de carreras</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCarrera)
        </th>
       
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.NombreCarrera)
    </td>
   
    <td>

        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })


    </td>
</tr>
}

</table>
